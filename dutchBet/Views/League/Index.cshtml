        <div class="col-md-12">
            <div class="row">
                <div style="width:20%;">
                    <h2>Bet9ja</h2>
                    <ul class="list-unstyled">
                        @for (int i = 0; i < Bet9ja.Count; i++)
                        {
                            <div class="panel panel-default">
                                <div class="panel-heading"><h3>@Bet9ja[i].LeagueId</h3></div>
                                <div class="panel-body">
                                    <p><b>League : </b> @Bet9ja[i].LeagueName</p>
                                    <p><b>Country : </b> @Bet9ja[i].Country</p>
