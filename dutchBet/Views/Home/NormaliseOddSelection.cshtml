@using Classes;
@model List<NormalisedSelection>

@{
    ViewBag.Title = "NormaliseOddSelection";
    var Bet9jaOdds = (List<Bet9jaOdds>)ViewBag.Bet9jaOdds;
    var BetPawaOdds = (List<BetPawaOdds>)ViewBag.BetPawaOdds;

    int max = ViewBag.Max;
    string msg = ViewBag.Msg;
}

<h2>NormaliseOddSelection</h2>

@if (!string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-dismissable alert-success">
        @msg
    </div>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-xs-6">
                    <h2>Bet9ja</h2>
                    <ul class="list-unstyled">
                        @for (int i = 0; i < Bet9jaOdds.Count; i++)
                        {
                            <li>@Bet9jaOdds[i].SelectionFull</li>
                        }
                    </ul>
                </div>
                <div class="col-xs-6">
                    <h2>BetPawa</h2>
                    <ul class="list-unstyled">
                        @for (int i = 0; i < BetPawaOdds.Count; i++)
                        {
                            <li>@BetPawaOdds[i].SelectionFull</li>
                        }
                    </ul>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <form method="post">

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Normalised</th>
                            <th>Bet9ja</th>
                            <th>Betpawa</th>
                            <th>Merrybet</th>
                            <th>Nairabet</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < 50; i++)
                        {
                            <tr>
                                <td>@Html.EditorFor(m => m[i].Normal)</td>
                                <td>@Html.EditorFor(m => m[i].Bet9ja)</td>
                                <td>@Html.EditorFor(m => m[i].BetPawa)</td>
                                <td>@Html.EditorFor(m => m[i].MerryBet)</td>
                                <td>@Html.EditorFor(m => m[i].NairaBet)</td>
                            </tr>
                        }
                    </tbody>
                </table>


                <input type="submit" value="Submit" class="btn btn-primary btn-lg" />
            </form>
        </div>
    </div>
</div>
